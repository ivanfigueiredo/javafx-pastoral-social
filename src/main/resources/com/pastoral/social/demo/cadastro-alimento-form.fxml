<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="700.0" prefWidth="875.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pastoral.social.demo.adapters.controller.CadastroAlimentoController">
    <children>
        <Label text="Cadastro de Alimento">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
            <padding>
                <Insets bottom="10.0" left="15.0" top="5.0" />
            </padding>
        </Label>
        <ToolBar prefHeight="40.0" prefWidth="200.0">
            <padding>
                <Insets top="20.0" />
            </padding>
            <VBox.margin>
                <Insets />
            </VBox.margin></ToolBar>
        <GridPane prefHeight="600.0" prefWidth="875.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label lineSpacing="10.0" text="Categoria Produto">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <padding>
                        <Insets bottom="25.0" left="10.0" top="25.0" />
                    </padding></Label>
                <Label prefHeight="18.0" prefWidth="103.0" text="Marca" GridPane.rowIndex="1">
                    <padding>
                        <Insets bottom="25.0" left="10.0" top="25.0" />
                    </padding>
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font></Label>
                <Label text="Validade do Produto" GridPane.rowIndex="2">
                    <padding>
                        <Insets bottom="25.0" left="10.0" top="25.0" />
                    </padding>
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font></Label>
                <Label text="Localização" GridPane.rowIndex="3">
                    <padding>
                        <Insets bottom="25.0" left="10.0" top="25.0" />
                    </padding>
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font></Label>
                <Label text="Unidade de Medida" GridPane.rowIndex="4">
                    <padding>
                        <Insets bottom="25.0" left="10.0" top="25.0" />
                    </padding>
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font></Label>
                <TextField fx:id="textFieldMarca" maxHeight="50.0" maxWidth="250.0" promptText="Informe o texto" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <font>
                        <Font size="14.0" />
                    </font></TextField>
                <ComboBox fx:id="comboBoxListUND" maxHeight="50.0" maxWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <ComboBox fx:id="comboBoxListCategoria" maxHeight="50.0" maxWidth="250.0" GridPane.columnIndex="1" />
                <DatePicker fx:id="datePickerDataValidade" maxHeight="50.0" maxWidth="250.0" promptText="18/03/2025" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <HBox prefHeight="33.0" prefWidth="192.0" spacing="50.0" GridPane.rowIndex="5">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onCancelarCadastro" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #FF0000;" text="Cancelar" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onFinalizarCadastro" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #008000;" text="Salvar" textFill="WHITE">
                            <padding>
                                <Insets bottom="10.0" top="10.0" />
                            </padding>
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets left="10.0" top="20.0" />
                    </padding>
                    <GridPane.margin>
                        <Insets />
                    </GridPane.margin>
                </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="6">
               <children>
                  <Label fx:id="formErrorLabel" style="-fx-font-size: 12px;" textFill="RED">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Label>
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
               <GridPane.margin>
                  <Insets top="10.0" />
               </GridPane.margin>
            </HBox>
            <ComboBox fx:id="comboBoxListLocalizacao" maxHeight="50.0" maxWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
            <padding>
                <Insets left="10.0" right="10.0" top="20.0" />
            </padding>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="10.0" />
    </padding>
</VBox>
